{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Output Options */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,

    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["prettier.config.js", "dist", "node_modules"]
}
